<section class="hero large-12 columns"
  style='background-image: url("<%= @pet.picture_url %>");'>
  <div class="row intro panel match-details ">
  <% if !current_user %>
  <a href='#' class='button tiny right' data-reveal-id="sign-in-modal">Sign in to favorite</a>
  <% elsif @fav %>
  <h4 class='right'><%= @pet.name %> is a favorite!</h4>
  <% else %>
   <%= form_tag "/favorites" do %>
  <%= hidden_field :pet, :id, value: @pet.id %>
  <%= submit_tag "Add to favorites!" , class: "button tiny right "%>
  <% end  %>
  <% end %>
    <h2>
      Meet
      <%=@pet.name %></h2>

    <div class="medium-8 left match-content">
      <h3>My story</h3>
      <p>
        <%= @pet.bio %>

      </p>
            <a href='#' class='button' data-reveal-id="shelter-modal"> Contact Shelter </a>
    </div>
    <div class="medium-4 right match-side">

      <table class='match-details'>
      <tr><th>Match</th>
      <td>95%</td></tr>
        <tr>
          <th>Breed</th>
          <td>
            <%= @pet.breed %></td>
        </tr>
        <tr>
          <th>Sex</th>
          <td>
            <%= @pet.sex %></td>
        </tr>
        <tr>
          <th>Color</th>
          <td>
            <%= @pet.color %></td>
        </tr>
        <tr>
          <th>Size</th>
          <td>
            <%= @pet.size %></td>
        </tr>
        <tr>
          <th>Energy</th>
          <td>
            <%= @pet.energy %></td>
        </tr>
      </table>
    </div>

  </div>

</section>



<div id="shelter-modal" class="reveal-modal" data-reveal aria-labelledby="shelter-modal" aria-hidden="true" role="dialog">
  <h2 id="modalTitle">You can find me at <%=@shelter.name %></h2>
  <p class="lead"><%= @shelter.address %></p>
   <%= text_field_tag :user_name, nil, placeholder: "Your Name" %>
   <%= text_field_tag :user_email, nil, placeholder: "Your Email" %>
   <%= text_area_tag :bio, nil, placeholder: "Tell us about your self" %>
   <%= link_to "Send!", match_path(@pet.id), class: 'button' %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>

